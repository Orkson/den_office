@model den_office.Models.Service

@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutSidebar";

}

<h2 class="text-center">Stwórz nową usługę</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceName" class="control-label"></label>
                <input asp-for="ServiceName" class="form-control" />
                <span asp-validation-for="ServiceName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDuration" class="control-label"></label>
                <input asp-for="ServiceDuration" class="form-control" />
                <span asp-validation-for="ServiceDuration" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


