@model IEnumerable<den_office.Models.Service>

@{
    ViewData["Title"] = "Index";
    if (User.IsInRole("Admin"))
    {
        Layout = "_LayoutSidebar";
    }
    else
    {
        Layout = "_LayoutSidebarUser";
    }
}
<h2 class="text-center">
    Lista usług
</h2>
<hr />
@if (User.IsInRole("Admin"))
{
    <a asp-action="Create" role="button" class="btn btn-primary float-end" data-toggle="button" aria-pressed="true">Utwórz nową usługę</a>
}
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDuration)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @if (User.IsInRole("Admin"))
                    {
                        <a asp-action="Details" asp-route-id="@item.ServiceId">@Html.DisplayFor(model => item.ServiceName)</a>
                    }
                    else
                    {
                        @Html.DisplayFor(model => item.ServiceName)
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDuration)
                </td>

            </tr>
        }
    </tbody>
</table>