@model den_office.Models.Reservation

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutSidebar";
    IEnumerable<Reservation> reservations = ViewData["model"] as IEnumerable<Reservation>;
}
<style>
    .table-style {
        text-align: center;
        vertical-align: middle;
    }
</style>

    <h2 class="text-center">
        Lista aktualnych rezerwacji
    </h2>
    <hr />
    <a asp-action="Createreservation" role="button" class="btn btn-primary float-end" style="margin-bottom:20px;" data-toggle="button" aria-pressed="true">Utwórz nową rezerwację</a>



    <table class="table table-bordered table-style">
        <thead>
            <tr >
                <th>
                    @Html.DisplayNameFor(reservations => reservations.ServiceDate)
                </th>
                <th>
                    Klient
                </th>
                <th>
                    @Html.DisplayNameFor(reservations => reservations.ReservationDate)
                </th>
                <th>
                    @Html.DisplayNameFor(reservations => reservations.Service.ServiceName)
                </th>




                <th style="width:180px"></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in reservations)
            {
                @if (item.ServiceDate > DateTime.Now.Date)
                {
                    @if (item.ServiceDate <= DateTime.Now)
                    {
                        <tr>
                            <td>
                                <s>
                                    @Html.DisplayFor(modelItem => item.ServiceDate)

                                </s>
                            </td>
                            <td>
                                <s>
                                    @Html.DisplayFor(modelItem => item.CustomerName)<br>
                                    @Html.DisplayFor(modelItem => item.CustomerSurname)<br>
                                    @Html.DisplayFor(modelItem => item.CustomerEmail)

                                </s>
                            </td>
                            <td>
                                <s>
                                    @Html.DisplayFor(modelItem => item.ReservationDate)
                                </s>
                            </td>
                            <td>
                                <s>
                                    @Html.DisplayFor(modelItem => item.Service.ServiceName)
                                </s>
                            </td>
                            <td>
                                
                                    <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ReservationId">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
