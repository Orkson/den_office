@model IEnumerable<den_office.Models.Reservation>

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutSidebar";

}
<h2 class="text-center">
    Lista rezerwacji
</h2>
<hr />
    <a asp-action="Createres" role="button" class="btn btn-primary float-end" data-toggle="button" aria-pressed="true">Utwórz nową rezerwację</a>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Service.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)

            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReservationDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerSurname)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerEmail)
            </th>




            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Service.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ReservationDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerSurname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CustomerEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ReservationId">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.ReservationId">Szczegóły</a>
                <a asp-action="Delete" asp-route-id="@item.ReservationId">Usuń</a>
            </td>
        </tr>
        }


    </tbody>
</table>
