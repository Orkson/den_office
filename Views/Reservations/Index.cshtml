@model den_office.Models.Reservation

@{
    ViewData["Title"] = "Index";
    Layout = "_LayoutSidebar";
    IEnumerable<Reservation> reservations = ViewData["model"] as IEnumerable<Reservation>;
}
<style>
    .table-style {
        text-align: center;
        vertical-align: middle;
    }
</style>

<h2 class="text-center">
    Historia rezerwacji
</h2>
<hr />
<a asp-action="CreateReservation" role="button" class="btn btn-primary float-end" style="margin-bottom:20px;" data-toggle="button" aria-pressed="true">Utwórz nową rezerwację</a>

<table class="table table-bordered">
    <thead>
        <tr class="table-style">

            <th>
                @Html.ActionLink(@Html.DisplayNameFor(reservations => reservations.ServiceDate), "Index", new { sortOrder = ViewBag.ServiceSortParm })

            </th>
            <th>
                @Html.ActionLink("Klient", "Index", new { sortOrder = ViewBag.CustomerEmailSortParm })
            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(reservations => reservations.ReservationDate), "Index", new { sortOrder = ViewBag.ResSortParm })

            </th>
            <th>
                @Html.ActionLink(@Html.DisplayNameFor(reservations => reservations.Service.ServiceName), "Index", new { sortOrder = ViewBag.ServiceNameSortParm })

            </th>
            <th style="width:180px"></th>

        </tr>
    </thead>
    <tbody>
        @foreach (var item in reservations)
        {
            <tr class="table-style">
                <td>
                    @Html.DisplayFor(modelItem => item.ServiceDate)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CustomerEmail)<br />
                    @Html.DisplayFor(modelItem => item.CustomerName)<br />
                    @Html.DisplayFor(modelItem => item.CustomerSurname)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReservationDate)

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Service.ServiceName)

                </td>
                <td>
                        <a type="button" class="btn btn-secondary" asp-action="Edit" asp-route-id="@item.ReservationId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil" viewBox="0 0 16 16">
                                <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z" />
                            </svg>
                        </a>
                        <a type="button" class="btn btn-secondary" asp-action="Details" asp-route-id="@item.ReservationId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-list" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z" />
                            </svg>
                        </a>
                        <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.ReservationId">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash" viewBox="0 0 16 16">
                                <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z" />
                                <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z" />
                            </svg>
                        </a>
                </td>
            </tr>
        }


    </tbody>
</table>
