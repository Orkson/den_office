@model den_office.Models.Reservation

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@{
    DateTime date1 = DateTime.Now;

    DateTime date2 = DateTime.Now;

    DateTime date3 = DateTime.Now;
    TimeSpan ts1 = new TimeSpan(10, 00, 0);
    TimeSpan ts2 = new TimeSpan(10, 30, 0);
    TimeSpan ts3 = new TimeSpan(11, 00, 0);

    date1 = date1.Date + ts1;

    date2 = date2.Date + ts2;

    date3 = date3.Date + ts3;

}
@User.Identity.IsAuthenticated
<script>

function verifyAnswer() {
    //disable all the radio button
    document.getElementById("dat1").disabled = true;
    document.getElementById("js").disabled = true;
    document.getElementById("angular").disabled = true;

    //get the value if checkbox is checked
    var dev = document.getElementById("myCheck").checked;
    if (dev == true) {
    //enable all the radio button
      document.getElementById("dat1").disabled = false;
      document.getElementById("js").disabled = false;
      document.getElementById("angular").disabled = false;
   }
}
</script>
<h4>Reservation</h4>
<hr />
<div asp-validation-summary="ModelOnly" class="text-danger"></div>
<div class="form-check">
    <span asp-validation-for="Status" class="text-danger"></span>
</div>
<form>
    <input type="checkbox" id="myCheck" onchange="verifyAnswer()" checked>
</form>
<div class="form-group">
    <a>@date1.ToString("dddd, dd MMMM yyyy")</a><br />

    <label asp-for="ServiceDate">@date1.TimeOfDay</label>
    <input asp-for="ServiceDate" type="radio" id="dat1" value="@date1"><br>
    <label asp-for="ServiceDate">@date2.TimeOfDay</label>
    <input asp-for="ServiceDate" type="radio" value="@date2"><br>
    <label asp-for="ServiceDate">@date3.TimeOfDay</label>
    <input asp-for="ServiceDate" type="radio" value="@date3"><br>

    <span asp-validation-for="ServiceDate" class="text-danger"></span>
</div>
<div class="form-group">
    <input type="hidden" asp-for="ReservationDate" class="form-control" value="@DateTime.Now" />

    <span asp-validation-for="ReservationDate" class="text-danger"></span>
</div>
<div class="form-group">
    <select asp-for="ServiceId" class="form-select">
        <option selected disabled>Wybierz usługę</option>
        <option value="1">Przegląd techniczny stanu uzębienia</option>
        <option value="2">Montowanie plomby</option>
        <option value="3">Eksmisja Zęba</option>
    </select>
    <span asp-validation-for="ServiceId" class="text-danger"></span>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

