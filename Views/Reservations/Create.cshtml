@model den_office.Models.Reservation


@{
    ViewData["Title"] = "Create";
    Layout = "_LayoutSidebar";

}

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<h1>Create</h1>

<p> @ViewData["User"] </p>
<p> @ViewData["Email"]</p>

<h4>Reservation </h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input type="hidden" asp-for="Status" class="form-control" value="@User.Identity.Name" />
                <span asp-validation-for="Status" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ServiceDate">@DateTime.Now.Date</label>
                <input asp-for="ServiceDate" type="radio" value="@DateTime.Now"><br>

                <input asp-for="ServiceDate" type="radio" value="@DateTime.Now.AddDays(12)">
                <label asp-for="ServiceDate">@DateTime.Now.AddDays(12)</label><br>

                <input asp-for="ServiceDate" type="radio" value="@DateTime.Now">
                <label asp-for="ServiceDate">@DateTime.Now</label><br>


                <!--<label asp-for="ServiceDate" class="control-label"></label>
                <input asp-for="ServiceDate" class="form-control" />
                -->
                
                <span asp-validation-for="ServiceDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="ReservationDate" class="form-control" value="@DateTime.Now" />

                <span asp-validation-for="ReservationDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <select asp-for="ServiceId" class="form-select">
                    <option selected disabled>Wybierz usługę</option>
                    <option value="1">Przegląd techniczny stanu uzębienia</option>
                    <option value="2">Montowanie plomby</option>
                    <option value="3">Eksmisja Zęba</option>
                </select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

